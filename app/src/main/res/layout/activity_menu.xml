<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context="com.example.misho.login.Menu"
    android:orientation="vertical"
    android:padding="0dp"
    android:weightSum="100">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="136dp">

            <TextView
                android:layout_width="176dp"
                android:layout_height="55dp"
                android:text="shalom.weiss@gmail.com"
                android:id="@+id/textView"
                android:layout_gravity="right|bottom"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:text="Shalom Weiss"
                android:id="@+id/tv_fullname"
                android:layout_gravity="right|center_vertical"
                android:textSize="20dp"
                android:autoText="false"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="147dp"
                android:layout_height="93dp"
                android:id="@+id/imageView2"
                android:src="@drawable/kirill_avatar_circle_live"
                android:layout_gravity="left|center_vertical" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="28.88">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="search"
            android:layout_weight="0.22"
            android:background="@color/colorSearch">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textIsSelectable="false" />

            <ImageView
                android:layout_width="89dp"
                android:layout_height="81dp"
                android:id="@+id/imageView3"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_search"
                android:paddingLeft="10dp"
                android:adjustViewBounds="true" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:background="#7ec59d"
            android:layout_weight="0.10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorites"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="89dp"
                android:layout_height="81dp"
                android:id="@+id/menu_fav_imageview"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_fav"
                android:contentDescription="menu_fav star"
                android:paddingLeft="10dp"
                android:adjustViewBounds="true" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="23.95" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="search"
            android:layout_weight="0.5"
            android:background="#7775ad" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bibliography"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="89dp"
                android:layout_height="81dp"
                android:id="@+id/imageView6"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_bibilo" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="153dp"
            android:layout_height="match_parent"
            android:background="#4aaab5"
            android:layout_weight="0.40" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trivia"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="89dp"
                android:layout_height="81dp"
                android:id="@+id/imageView4"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_trivia"
                android:paddingLeft="10dp" />

        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:clickable="true"
        android:background="#3381ff">

    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10.66"
        android:background="#7775ad">

    </FrameLayout>
</LinearLayout>